<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5e9b9"
    tools:context="e.bruno.somdosbichos.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/caoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignTop="@+id/gatoId"
            android:src="@drawable/cao" />

        <ImageView
            android:id="@+id/gatoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_alignRight="@+id/imageView3"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="12dp"
            android:src="@drawable/gato" />

        <ImageView
            android:id="@+id/leaoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/vacaId"
            android:layout_alignLeft="@+id/caoId"
            android:layout_alignStart="@+id/caoId"
            android:src="@drawable/leao" />

        <ImageView
            android:id="@+id/macacoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/gatoId"
            android:layout_alignRight="@+id/gatoId"
            android:layout_below="@+id/gatoId"
            android:src="@drawable/macaco" />

        <ImageView
            android:id="@+id/ovelhaId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/vacaId"
            android:layout_alignLeft="@+id/leaoId"
            android:layout_alignStart="@+id/leaoId"
            android:src="@drawable/ovelha" />

        <ImageView
            android:id="@+id/vacaId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/macacoId"
            android:layout_alignRight="@+id/macacoId"
            android:layout_below="@+id/macacoId"
            android:src="@drawable/vaca" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/direitos"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="503dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
